pipeline {
    agent any
    stages {   // <-- 'stages' should wrap all stage definitions
        stage('Build') {
            steps {  // <-- Use 'steps' instead of 'step'
                echo 'Building...'
            }
        }
        stage('Test') {
            steps {
                echo 'Running Tests...'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying Application...'
            }
        }
    }
}
